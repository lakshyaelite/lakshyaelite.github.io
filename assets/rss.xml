---
layout: compress
permalink: /rss.xml
---

<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
  xmlns:content="http://purl.org/rss/1.0/modules/content/"
  xmlns:dc="http://purl.org/dc/elements/1.1/"
  xmlns:media="http://search.yahoo.com/mrss/"
  xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <link>{{ "/" | absolute_url }}</link>
    <description>{{ site.description | xml_escape }}</description>
    <language>{{ site.lang | default: "en" }}</language>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll {{ jekyll.version }}</generator>
    <copyright>Â© {{ 'now' | date: '%Y' }} {{ site.social.name | default: site.author.name }}</copyright>
    <atom:link href="{{ page.url | absolute_url }}" rel="self" type="application/rss+xml" />
    <managingEditor>{{ site.social.email | default: site.author.email | default: 'contact@lakshyasinghchauhan.com' }} ({{ site.social.name | default: site.author.name }})</managingEditor>
    <webMaster>{{ site.social.email | default: site.author.email | default: 'contact@lakshyasinghchauhan.com' }} ({{ site.social.name | default: site.author.name }})</webMaster>

    {% if site.social.avatar %}
    <image>
      <url>{{ site.social.avatar | absolute_url }}</url>
      <title>{{ site.title | xml_escape }}</title>
      <link>{{ "/" | absolute_url }}</link>
    </image>
    {% endif %}

    {% for post in site.posts limit: 10 %}
      {% assign post_absolute_url = post.url | absolute_url %}
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <link>{{ post_absolute_url }}</link>
        <guid isPermaLink="true">{{ post_absolute_url }}</guid>
        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
        <dc:creator>{{ post.author | default: site.social.name | default: site.author.name }}</dc:creator>

        {% if post.categories %}
        {% for category in post.categories %}
        <category>{{ category | xml_escape }}</category>
        {% endfor %}
        {% endif %}

        {% if post.tags %}
        {% for tag in post.tags %}
        <category>{{ tag | xml_escape }}</category>
        {% endfor %}
        {% endif %}

        <description>
          <![CDATA[
          {% if post.description %}
            {{ post.description | strip_html | xml_escape }}
          {% elsif post.excerpt %}
            {{ post.excerpt | strip_html | truncatewords: 50 | xml_escape }}
          {% else %}
            {{ post.content | strip_html | truncatewords: 50 | xml_escape }}
          {% endif %}
          ]]>
        </description>

        <content:encoded>
          <![CDATA[
          {{ post.content }}
          ]]>
        </content:encoded>

        {% if post.image %}
        <media:thumbnail url="{{ post.image | absolute_url }}"/>
        <media:content url="{{ post.image | absolute_url }}" medium="image"/>
        {% elsif site.social.avatar %}
        <media:thumbnail url="{{ site.social.avatar | absolute_url }}"/>
        <media:content url="{{ site.social.avatar | absolute_url }}" medium="image"/>
        {% endif %}
      </item>
    {% endfor %}
  </channel>
</rss>
